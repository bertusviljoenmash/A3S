# Build stage
FROM mcr.microsoft.com/dotnet/core/sdk:3.1-alpine AS build-env
WORKDIR /app
COPY src/za.co.grindrodbank.a3s/*.csproj ./
COPY Directory.Build.props ./
RUN dotnet restore

COPY src/za.co.grindrodbank.a3s/ ./
RUN dotnet publish -c Release -o out

# Add Flyway to the 
FROM flyway/flyway:latest-alpine AS flywayinstall
#WORKDIR /app
RUN mkdir -p /flyway/sql/a3s

COPY db/sql/a3s /flyway/sql/a3s

# Copy docker scripts
COPY ./docker-container-scripts/docker-entrypoint-a3s.sh /
USER root
RUN chmod +x /*.sh
USER flyway

# runtime stage
FROM mcr.microsoft.com/dotnet/core/aspnet:3.1-alpine
WORKDIR /app
COPY --from=build-env /app/out .
COPY --from=flywayinstall / /

ENTRYPOINT ["/docker-entrypoint-a3s.sh"]
